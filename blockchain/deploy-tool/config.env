# Network configuration
NETWORK="bsc-testnet"
RPC_URL="https://data-seed-prebsc-1-s1.binance.org:8545"
ACCOUNT="bnb"

# Distribution settings
AMOUNT_PER_WALLET="100"  # Amount each wallet will receive (in DROPit)
WALLET_COUNT="1000"      # Number of wallets to distribute to

# Gas settings (optional - will use defaults if not set)
GAS_LIMIT="3000000"
GAS_PRICE="3"  # in Gwei

# Token configuration
TOKEN_NAME="Airdrop Token"
TOKEN_SYMBOL="DROPit"
TOKEN_DECIMALS="18"
TOKEN_INITIAL_SUPPLY="1000000"

# Script behavior
VERBOSE="false"
DRY_RUN="false"

